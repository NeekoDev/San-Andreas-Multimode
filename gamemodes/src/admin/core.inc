SendAdminMessage(colour, const message[], {Float,_}:...) {
	new buffer[244];
	format(buffer, sizeof(buffer), message, ___(2));

    foreach(new i : Player) {
        if (!IsPlayerSpawned(i))
            continue;

        if (!GetPlayerAdmin(i))
            continue;

        SendClientMessage(i, colour, buffer);
    }

    return 1;
}

