hook OnPlayerText(playerid, text[]) 
{
    // Checks
    if (!player_Data[playerid][p_Spawned])
        return 0;

    // Player is in lobby
    if (player_Data[playerid][p_InLobby]) {
        SendLobbyMessage(playerid, text);
        return 1;
    }

    return 0;
}

