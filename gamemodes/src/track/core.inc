    return 1;
}

hook OnDatabaseInitialized()
{
    _Track_Load();

    return 1;
}

/*
* ==============================================================================
* Internal events
* ==============================================================================
*/

public Track_OnLoad()
{
    if(cache_num_rows() > 0) {
        new trackid = INVALID_TRACK_ID;

        for(new i = 0, j = cache_num_rows(); i < j; i++) {
            trackid = Iter_Free(track_List);

            if(trackid == ITER_NONE) {
                Log_Error("MAX_TRACK reached, please increase this constant.");
                return INVALID_TRACK_ID;
            }

            Iter_Add(track_List, trackid);

            if(!Iter_Contains(track_List, trackid)) {
                Log_Error("Error when added id to track_List.");
                return INVALID_TRACK_ID;
            }

            cache_get_value_name_int(i, "Id", track_Data[trackid][t_Id]);
        }
    }

    Log_Info("%d tracks loaded.", cache_num_rows());

    return 1;
}

